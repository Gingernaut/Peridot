{
  "name": "peridot",
  "version": "1.0.0",
  "description": "A delightfully powerful Vue.js boilerplate",
  "scripts": {
    "dev": "cross-env NODE_ENV=development node server/index",
    "start": "cross-env NODE_ENV=production node server/index",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --progress --hide-modules",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ext .js,.vue,.json build config server src --fix",
    "lint:css": "stylelint '**/*.{scss}' --syntax scss --fix",
    "refresh": "rimraf yarn.lock && rimraf node_modules && yarn install"
  },
  "keywords": [],
  "author": "Tyler Peterson",
  "license": "MIT",
  "dependencies": {
    "buefy": "^0.6.2",
    "compression": "^1.7.1",
    "cross-env": "^5.1.3",
    "envalid": "^4.1.2",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "lru-cache": "^4.1.1",
    "route-cache": "^0.4.4",
    "serve-favicon": "^2.4.5",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "vue": "^2.5.13",
    "vue-meta": "^1.4.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.13",
    "vuex": "^3.0.1",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.2.4",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-preset-stage-3": "^6.24.1",
    "babel-preset-vue-app": "^2.0.0",
    "chokidar": "^2.0.0",
    "compression-webpack-plugin": "^1.1.3",
    "copy-webpack-plugin": "^4.3.1",
    "css-loader": "^0.28.8",
    "eslint": "^4.15.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^4.0.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "glob-all": "^3.1.0",
    "html-webpack-plugin": "^2.30.1",
    "node-sass": "^4.7.2",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "purify-css": "^1.2.5",
    "purifycss-webpack": "^0.7.0",
    "rifraf": "^2.0.3",
    "sass-loader": "^6.0.6",
    "sass-resources-loader": "^1.3.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-scss": "^2.2.0",
    "stylelint-webpack-plugin": "^0.10.1",
    "sw-precache-webpack-plugin": "^0.11.4",
    "vue-loader": "^13.6.2",
    "vue-style-loader": "^3.0.3",
